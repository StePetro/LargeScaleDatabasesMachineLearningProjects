<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lsmsdbgroup.pisaflixg.LoginController">
   <children>
      <TextField fx:id="usernameTextField" promptText="Username">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordTextField" promptText="Password">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#clickLoginButton" styleClass="button-raised" text="Login" />
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#clickRegisterButton" styleClass="button-raised" text="Register" />
         </children>
      </HBox>
      <Label fx:id="loginStatusLabel" text="Logged as: ">
          <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#clickLogoutButton" styleClass="button-raised" text="Logout">
          <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
          </Button>
   </children>
</VBox>
