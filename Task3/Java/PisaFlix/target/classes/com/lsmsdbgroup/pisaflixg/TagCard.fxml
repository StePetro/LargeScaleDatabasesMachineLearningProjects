<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" maxWidth="150.0" onMouseClicked="#addTag" prefWidth="150.0" spacing="5.0" styleClass="card-tags" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../img/Film.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="titleTextField" styleClass="card-tags-title" text="Label">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label fx:id="dateTextField" styleClass="card-tags-subtitle" text="Label">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
